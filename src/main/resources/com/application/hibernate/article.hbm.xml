<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
<hibernate-mapping>  
    <!--生成默认为user的数据库表-->  
    <class name ="com.orm.Article" table="wxy.article">  
        <id name ="id">
            <generator class ="native"></generator>  
        </id > 
        <property name ="title" type="string"></property>  
        <property name ="titleDate" type="string"></property>
        <property name ="inputDate" type="string"></property>
        <property name ="url" type="string"></property>
        <property name ="writer" type="string"></property>
    </class > 
</hibernate-mapping>